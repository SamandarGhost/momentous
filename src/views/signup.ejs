<%- include('includes/header') %>

  <link rel="stylesheet" type="text/css" href="/css/signup.css" />

  <body>
    <div class="signup-container">
      <form onsubmit="return validateSignupForm()" action="/owner/signup" method="POST" enctype="multipart/form-data">
        <div class="signup-frame" style="width: 650px">
          <div class="signup-top">
            <span class="signup">Signup</span>
            <div class="signup">Go back: <a href="/owner" style="color: #ababab">Home</a></div>
            <p class="signup">
              Already signed up?:
              <a href="/owner/login" style="color: #a3a3a3">Login</a>
            </p>
          </div>

          <div class="sign-input-frame" style="justify-content: space-between">
            <div class="sign-up-frame">
              <label class="signup">Owner *</label>
              <input type="text" name="memberNick" class="member-nick signup" placeholder="Username" value="" />
            </div>
            <div class="sign-up-frame">
              <label class="signup">Phone *</label>
              <input type="text" name="memberPhone" class="member-phone signup" placeholder="Phone" value="" />
            </div>
          </div>
          <div class="sign-input-frame" style="justify-content: space-between">
            <div class="sign-up-frame">
              <label class="signup">Password *</label>
              <input type="password" name="memberPassword" class="member-password signup" placeholder="Password"
                value="" />
            </div>
            <div class="sign-up-frame">
              <label class="signup">Repeat password *</label>
              <input type="password" name="confirmPassword" class="confirm-password signup"
                placeholder="Repeat password" value="" />
            </div>
          </div>

          <div class="signup-input-frame">
            <div class="media-frame">
              <img class="upload-img-frame" src="/img/store.jpg" />
              <div class="upload-container">
                <span class="media-text signup">Owner image</span>
                <div class="file-box bs3-primary preview-image" style="margin-top: 25px; display: flex">
                  <input class="upload-name" value="Choose image" disabled="disabled" />
                  <label for="input-file" class="file-input-label signup">Upload Image</label>
                  <input type="file" id="input-file" class="upload-hidden form-control-file member-image"
                    name="memberImage" />
                </div>
                <p class="thumbnail-desc signup">
                  Please upload restaurant image.<br />
                  Attention only:.jpg, .jpeg, or .png. <br />
                  formats allowed!
                </p>
              </div>
            </div>
          </div>

          <input name="memberType" value="RESTAURANT" hidden />

          <button class="signup-btn btn" name="signup" type="submit">
            Signup
          </button>
        </div>
      </form>
    </div>

    <script type="text/javascript" src="/js/signup.js"></script>
  </body>

  <%- include('includes/footer') %>